<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Doctor Appointment Calendar Popup</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #f5f6fa;
            margin: 0;
        }

        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(44,62,80,0.25);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .calendar-modal {
            background: #fff;
            border-radius: 13px;
            box-shadow: 0 2px 24px rgba(0,0,0,0.13);
            width: 400px;
            max-width: 95vw;
            padding: 0 0 25px 0;
            position: relative;
            animation: pop 0.2s;
        }


        {
            transform: scale(0.97);
        }

        to {
            transform: scale(1);
        }

        }

        .calendar-modal-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 22px 28px 0 28px;
        }

            .calendar-modal-header h2 {
                font-size: 22px;
                font-weight: 700;
                margin: 0;
                color: #1890a7;
            }

        .close-btn {
            background: none;
            border: none;
            font-size: 26px;
            cursor: pointer;
            color: #444;
        }

        .calendar-controls {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 28px 0 28px;
        }

            .calendar-controls button {
                background: none;
                border: none;
                font-size: 19px;
                cursor: pointer;
                color: #888;
                padding: 4px 8px;
            }

            .calendar-controls span {
                font-size: 17px;
                font-weight: 500;
                color: #222;
            }

        .calendar-table {
            width: 100%;
            border-collapse: collapse;
            margin: 10px 0 0 0;
        }

            .calendar-table th, .calendar-table td {
                text-align: center;
                width: 44px;
                height: 44px;
                font-size: 15px;
                color: #444;
                border-radius: 50%;
                cursor: pointer;
                transition: background 0.15s;
            }

            .calendar-table th {
                color: #888;
                font-weight: 500;
                background: #fff;
            }

            .calendar-table td:hover {
                background: #e7ebf3;
            }

            .calendar-table .selected {
                background: #22b455;
                color: #fff;
                font-weight: bold;
            }

            .calendar-table .today {
                border: 2px solid #12a8e0;
            }

            .calendar-table td:empty {
                cursor: default;
                background: none;
            }

        .book-btn {
            display: block;
            margin: 32px auto 0 auto;
            background: #22b455;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 17px;
            font-weight: 600;
            padding: 16px 0;
            width: 90%;
            cursor: pointer;
            transition: background 0.2s;
        }

            .book-btn:disabled {
                background: #c1eac5;
                color: #fff;
                cursor: not-allowed;
            }
    </style>
</head>
<body>
    <!-- زر لفتح الكالندر (للتجربة فقط) -->
    <button onclick="openModal()" style="margin: 60px 40px; font-size: 17px;">Open Calendar Popup</button>

    <!-- نافذة الكالندر المنبثقة -->
    <div class="overlay" id="calendarOverlay" style="display:none;">
        <div class="calendar-modal">
            <div class="calendar-modal-header">
                <h2>Dr. Amgad ElHadad</h2>
                <button class="close-btn" onclick="closeModal()">×</button>
            </div>
            <div class="calendar-controls">
                <button onclick="prevMonth()">&#8592;</button>
                <span id="monthYear"></span>
                <button onclick="nextMonth()">&#8594;</button>
            </div>
            <table class="calendar-table">
                <thead>
                    <tr>
                        <th>Su</th>
                        <th>Mo</th>
                        <th>Tu</th>
                        <th>We</th>
                        <th>Th</th>
                        <th>Fr</th>
                        <th>Sa</th>
                    </tr>
                </thead>
                <tbody id="calendarBody"></tbody>
            </table>
            <button class="book-btn" id="bookBtn" disabled>Choose a date</button>
        </div>
    </div>
    <script>
        // Calendar variables
        let today = new Date();
        let currentMonth = today.getMonth();
        let currentYear = today.getFullYear();
        let selectedDate = null;

        const monthYear = document.getElementById('monthYear');
        const calendarBody = document.getElementById('calendarBody');
        const bookBtn = document.getElementById('bookBtn');

        const months = [
            "January", "February", "March", "April", "May", "June",
            "July", "August", "September", "October", "November", "December"
        ];

        function renderCalendar(month, year) {
            monthYear.textContent = `${months[month]} ${year}`;
            calendarBody.innerHTML = "";

            let firstDay = new Date(year, month, 1).getDay();
            let daysInMonth = new Date(year, month + 1, 0).getDate();

            let date = 1;
            for (let i = 0; i < 6; i++) {
                let row = document.createElement("tr");
                for (let j = 0; j < 7; j++) {
                    let cell = document.createElement("td");
                    if (i === 0 && j < firstDay) {
                        cell.textContent = "";
                    } else if (date > daysInMonth) {
                        cell.textContent = "";
                    } else {
                        cell.textContent = date;
                        let thisDate = new Date(year, month, date);
                        if (
                            thisDate.getDate() === today.getDate() &&
                            thisDate.getMonth() === today.getMonth() &&
                            thisDate.getFullYear() === today.getFullYear()
                        ) {
                            cell.classList.add("today");
                        }
                        if (
                            selectedDate &&
                            thisDate.getDate() === selectedDate.getDate() &&
                            thisDate.getMonth() === selectedDate.getMonth() &&
                            thisDate.getFullYear() === selectedDate.getFullYear()
                        ) {
                            cell.classList.add("selected");
                        }
                        cell.onclick = function () {
                            selectedDate = new Date(year, month, date);
                            renderCalendar(currentMonth, currentYear);
                            bookBtn.disabled = false;
                            bookBtn.textContent = `Book on ${selectedDate.toLocaleDateString('en-GB')} (02:00 PM - 05:00 PM)`;
                        };
                        date++;
                    }
                    row.appendChild(cell);
                }
                calendarBody.appendChild(row);
                if (date > daysInMonth) break;
            }
            // Reset button if no date selected
            if (!selectedDate || selectedDate.getMonth() !== month || selectedDate.getFullYear() !== year) {
                bookBtn.disabled = true;
                bookBtn.textContent = "Choose a date";
            }
        }

        function prevMonth() {
            currentMonth--;
            if (currentMonth < 0) {
                currentMonth = 11;
                currentYear--;
            }
            renderCalendar(currentMonth, currentYear);
        }

        function nextMonth() {
            currentMonth++;
            if (currentMonth > 11) {
                currentMonth = 0;
                currentYear++;
            }
            renderCalendar(currentMonth, currentYear);
        }

        function openModal() {
            document.getElementById('calendarOverlay').style.display = 'flex';
            renderCalendar(currentMonth, currentYear);
        }
        function closeModal() {
            document.getElementById('calendarOverlay').style.display = 'none';
        }

        // يمكنك فتح الكالندر تلقائياً عند تحميل الصفحة إذا أردت:
        // window.onload = openModal;
    </script>
</body>
</html>
