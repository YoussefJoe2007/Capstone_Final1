            }

            .calendar-controls span {
                font-size: 17px;
                font-weight: 500;
                color: #222;
            }

        .calendar-table {
            width: 100%;
            border-collapse: collapse;
            margin: 10px 0 0 0;
        }

            .calendar-table th, .calendar-table td {
                text-align: center;
                width: 44px;
                height: 44px;
                font-size: 15px;
                color: #444;
                border-radius: 50%;
                cursor: pointer;
                transition: background 0.15s;
            }

            .calendar-table th {
                color: #888;
                font-weight: 500;
                background: #fff;
            }

            .calendar-table td:hover.selectable {
                background: #e7ebf3;
            }

            .calendar-table .selected {
                background: #22b455;
                color: #fff;
                font-weight: bold;
            }

            .calendar-table .today {
                border: 2px solid #12a8e0;
            }

            .calendar-table td:empty {
                cursor: default;
                background: none;
            }

            .calendar-table td:not(.selectable) {
                color: #ccc !important;
                cursor: not-allowed !important;
                background: #f7f7f7;
            }

            .calendar-table .selectable {
                color: #222 !important;
                font-weight: bold;
                cursor: pointer;
                background: #fff;
            }

        .book-btn {
            display: block;
            margin: 32px auto 0 auto;
            background: #22b455;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 17px;
            font-weight: 600;
            padding: 16px 0;
            width: 90%;
            cursor: pointer;
            transition: background 0.2s;
        }

            .book-btn:disabled {
                background: #c1eac5;
                color: #fff;
                cursor: not-allowed;
            }


        .time-slots {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
            margin: 18px 0 0 0;
        }

        .time-slot-button {
            background-color: #22b455;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 10px 15px;
            font-size: 15px;
            cursor: pointer;
            font-weight: 500;
            transition: background-color 0.2s;
            margin: 0 2px;
        }

            .time-slot-button.selected {
                background-color: #12a8e0;
                color: #fff;
            }

            .time-slot-button:disabled {
                background: #eee !important;
                color: #aaa !important;
                cursor: not-allowed !important;
            }
    </style>
</head>
