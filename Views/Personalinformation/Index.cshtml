@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Healthy Lifestyle</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(120deg, #f9fbfc 60%, #e0e7ff 100%);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 1000px;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 8px 40px rgba(67, 56, 202, 0.08);
            overflow: hidden;
            display: flex;
            flex-direction: row;
            padding: 0;
            animation: fadeIn 0.8s;
        }

        .form-section {
            padding: 2.5rem 2rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .back-button {
            background-color: #e2e8f0;
            color: #334155;
            border: none;
            border-radius: 50%;
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            margin-bottom: 1.2rem;
            font-size: 1.1rem;
            transition: background 0.2s, color 0.2s;
        }

            .back-button:hover {
                background: #c7d2fe;
                color: #4338ca;
            }

        .logo {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .logo img {
                width: 70px;
                margin-bottom: 0.5rem;
            }

            .logo span {
                color: #475569;
                font-weight: 700;
                font-size: 1.2rem;
            }

        h1 {
            color: #1e293b;
            font-size: 2.1rem;
            margin-bottom: 1.5rem;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 1.1rem;
            margin-bottom: 1.5rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.2rem;
            animation: fadeIn 0.7s;
        }

            .form-group label {
                color: #475569;
                margin-bottom: 0.2rem;
                font-size: 1rem;
            }

        input[type="text"],
        input[type="number"] {
            color: #334155;
            background-color: #f8fafc;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            padding: 0.45rem 0.9rem;
            font-size: 0.93rem;
            font-weight: 500;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            input[type="text"]:focus,
            input[type="number"]:focus {
                border-color: #4338ca;
                outline: none;
                box-shadow: 0 0 0 2px rgba(67, 56, 202, 0.13);
            }

        .gender-group {
            margin-top: 0.7rem;
        }

        .gender-label {
            color: #475569;
            margin-bottom: 0.35rem;
            font-size: 1rem;
        }

        .gender-buttons {
            display: flex;
            gap: 0.7rem;
        }

        .gender-btn {
            background-color: #fff;
            color: #4338ca;
            border: 1.5px solid #4338ca;
            border-radius: 0.5rem;
            padding: 0.37rem 1.1rem;
            cursor: pointer;
            font-size: 0.93rem;
            font-weight: 600;
            transition: background 0.2s, color 0.2s, box-shadow 0.2s;
            box-shadow: 0 2px 8px rgba(67, 56, 202, 0.04);
            user-select: none;
        }

            .gender-btn.selected,
            .gender-btn:focus {
                background-color: #4338ca;
                color: #fff;
                box-shadow: 0 2px 8px rgba(67, 56, 202, 0.12);
            }

        .next-button {
            background-color: #4338ca;
            color: #fff;
            border: none;
            border-radius: 0.5rem;
            padding: 0.7rem 1.5rem;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: background 0.2s, box-shadow 0.2s;
            margin-top: 1.2rem;
            width: fit-content;
            align-self: flex-start;
            box-shadow: 0 2px 8px rgba(67, 56, 202, 0.08);
        }

            .next-button:hover {
                background-color: #312e81;
                box-shadow: 0 4px 16px rgba(67, 56, 202, 0.13);
            }

        .side-image {
            max-width: 38%;
            min-width: 200px;
            align-self: center;
            margin-left: 2rem;
            object-fit: contain;
            animation: fadeIn 1.2s;
        }

    </style>

</head>
<body>
    <div class="container">
        <div class="form-section">
            <button class="back-button" onclick="location='/Home/Index'">
                &larr;
            </button>

            <h1>Personal information</h1>
            <form method="post" action="/YourController/YourAction">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="FirstName" placeholder="Enter your first name" required />
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="LastName" placeholder="Enter your last name" required />
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" id="age" name="Age" placeholder="Your age" min="0" required />
                </div>
                <div class="form-group">
                    <label for="weight">Weight (kg)</label>
                    <input type="number" step="0.1" id="weight" name="Weight" placeholder="Your weight (kg)" min="0" required />
                </div>
                <div class="gender-group">
                    <div class="gender-label">Gender</div>
                    <div class="gender-buttons">
                        <button type="button" class="gender-btn" id="gender-female" onclick="selectGender('female')">Female</button>
                        <button type="button" class="gender-btn" id="gender-male" onclick="selectGender('male')">Male</button>
                    </div>
                    <input type="hidden" id="genderInput" name="Gender" required />
                </div>
                <button class="next-button" type="submit" onclick="location.href='/Healthylife/Index/'">
                    Next
                </button>
            </form>
        </div>
        <img src="~/images/Logo-removebg-preview.png" alt="Info" class="side-image" />
    </div>

</body>
</html>
